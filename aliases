alias g="grep -i"  #case insensitive grep
alias f="find . -iname"
alias top="top -o cpu"
alias ls="ls -al"
alias cls="clear"
alias gti="git"
alias rr="rake routes"
alias s="rails s"
alias v="vim"
alias b="bundle install"
alias bo="bundle open"
alias boam="bundle open activemerchant"
alias bu="bundle update"
alias cob="git checkout -b"
alias bd="git branch -d"
alias git="hub"

alias nginx.start="launchctl load ~/Library/LaunchAgents/homebrew.mxcl.nginx-full.plist"
alias nginx.stop="launchctl unload ~/Library/LaunchAgents/homebrew.mxcl.nginx-full.plist"
alias nginx.restart="nginx.stop && nginx.start"
alias nginx.reload="nginx -s reload"
alias nginx.logs.error="tail -250f /usr/local/var/log/nginx/error.log"
alias nginx.logs.access="tail -250f /usr/local/var/log/nginx/access.log"

alias mysql.start="launchctl load -w ~/Library/LaunchAgents/homebrew.mxcl.mysql.plist"
alias mysql.stop="launchctl unload -w ~/Library/LaunchAgents/homebrew.mxcl.mysql.plist"
alias mysql.restart="mysql.stop && mysql.start"

alias mongo.start="launchctl load ~/Library/LaunchAgents/homebrew.mxcl.mongodb24.plist"
alias mongo.stop="launchctl unload ~/Library/LaunchAgents/homebrew.mxcl.mongodb24.plist"
alias mongo.restart="mongo.stop && mongo.start"

alias weather="curl wttr.in"
